                <ImageView
                    android:id="@+id/solider34"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/gromflomite_soldier"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pickleRick40"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/pickle_rick_sticker"/>

                <ImageView
                    android:id="@+id/pickleRick41"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/pickle_rick_sticker"

                    />

                <ImageView
                    android:id="@+id/pickleRick42"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/pickle_rick_sticker" />

                <ImageView
                    android:id="@+id/pickleRick43"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/pickle_rick_sticker"/>

                <ImageView
                    android:id="@+id/pickleRick44"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/pickle_rick_sticker"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArrowLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                app:icon="@drawable/ic_arrow_left"
                app:iconSize="50dp"
                android:layout_gravity="end"

                />

            <View
                android:id="@+id/baznatArrows"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"   />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArrowRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                app:icon="@drawable/ic_arrow_right"
                app:iconSize="50dp"
                android:layout_gravity="start"
                />



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>